{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "eflow",
  "version": "0.1.0",
  "identifier": "com.eflow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "eflow",
        "width": 1100,
        "height": 950,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "minWidth": 400,
        "minHeight": 950
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "plugins": {
    "dialog": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
