{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "eFlood²",
  "version": "0.1.0",
  "identifier": "com.eflood2.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "eFlood²",
        "width": 1200,
        "height": 950,
        "minWidth": 1000,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "center": true,
        "focus": true,
        "visible": true,
        "maximized": false,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "dialog": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/android-chrome-192x192.png",
      "icons/android-chrome-512x512.png",
      "icons/apple-touch-icon.png",
      "icons/favicon-16x16.png",
      "icons/favicon-32x32.png",
      "icons/favicon.ico"
    ]
  }
}
